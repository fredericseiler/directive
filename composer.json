{
    "name": "seiler/directive",
    "type": "library",
    "description": "A PHP library to manipulate nginx configurations",
    "keywords": [
        "seiler",
        "directive"
    ],
    "homepage": "https://github.com/fredericseiler/directive",
    "license": "MIT",
    "authors": [
        {
            "name": "Frederic Seiler",
            "email": "frederic@seiler.io",
            "homepage": "https://github.com/fredericseiler",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~5.6|~7.0",
        "tightenco/collect": "^5.2"
    },
    "require-dev": {
        "phpunit/phpunit" : "~5.2.0 || ~5.7.0",
        "scrutinizer/ocular": "~1.1",
        "squizlabs/php_codesniffer": "~2.3"
    },
    "autoload": {
        "psr-4": {
            "Seiler\\Directive\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Seiler\\Directive\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "format": "phpcbf --standard=psr2 src/"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
